[Unit]
Description=Tiny Core Extensions as a service
DefaultDependencies=no
After=local-fs.target
Before=basic.target
Before=shutdown.target
Conflicts=shutdown.target

[Service]
Type=oneshot
ExecStart=@libdir@/tceaas load %f
ExecStop=@libdir@/tceaas unload
RemainAfterExit=yes
RuntimeDirectory=tceaas/%i

[Install]
WantedBy=multi-user.target
